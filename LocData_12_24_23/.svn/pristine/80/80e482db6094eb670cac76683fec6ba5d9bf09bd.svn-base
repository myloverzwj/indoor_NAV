lines::lines(float points1[][2],int num1)
{
	for(int i=0;i<num;i++)
	{
		points[i][0]=points1[i][0];
		points[i][1]=points1[i][1];
	}
	num=num1;

}

bool lines::if_in(float x1,float y1)
{
	float arg1=0;
   for(int i=0;i<num;i++)
   {
	   arg1+=atan2(points[i][0]-x1,points[i][1]-y1);
   }

	if(arg1*arg1<3)return false;
    else return true;
}

